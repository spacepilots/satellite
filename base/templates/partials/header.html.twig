<!doctype html>
<html class="no-js" lang="{{ page.language|default(site.language)}}">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  {% block title %}
  <title>{% if page.title %}{{ page.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
  {% endblock %}
  <meta name="description" content="{{ page.description|default(site.description)}}">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% block opengraph %}
  <meta property="og:title" content="{{ (page.title|default(site.title))|e('html') }}">
  <meta property="og:image" content="{{ site.url }}/images/sharing-large.png">
  <meta property="og:site_name" content="{{ site.title|e('html') }}">
  <meta property="og:description" content="{{ page.description|default(site.description) }}">
  <meta property="og:type" content="{{ page.meta.opengraph.type|default(site.meta.opengraph.type) }}">
  <meta property="og:url" content="{{ (page.url|default(site.url)) }}">
  <meta name="twitter:title" content="{{ (page.title|default(site.title))|e('html') }}">
  <meta name="twitter:description" content="{{ page.description|default(site.description)}}">
  <meta name="twitter:image" content="{{ site.url }}/images/sharing-large.png">
  <meta name="twitter:site" content="{{ site.twitter }}">
  <meta name="twitter:creator" content="{{ site.twitter }}">
  {% endblock %}

  <link rel="manifest" href="site.webmanifest">
  <link rel="apple-touch-icon" href="icon.png">

  {% block stylesheets %}{% endblock %}
</head>

<body>

  {% block browserupgrade %}
