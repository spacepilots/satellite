---
title: Debug
---
{% extends "@base/templates/layout.html.twig" %}

{% block content %}
<main class="container">
  <div class="row">
    <div class="col">
      <h2>Nodes</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Node</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for node in nodes %}
            <tr id="{{ node.id }}" class="node">
              <td>{{ node.name }}</td>
              <td>
                {% if node.parent is not empty %}
                  <a href="#{{ node.parent }}" class="btn btn-sm btn-light">
                    Show parent
                  </a>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h2>Routes</h2>
      <table class="table">
        <tbody>
          {% for route, nodeId in routes %}
            <tr>
              <td>
                <a href="{{ route }}">{{ route }}</a><br />
                {#{ nodes[nodeId].realPath }#}
              </td>
              <td>
                <a href="#{{ nodeId }}">{{ nodeId }}</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</main>
{% endblock %}

{% block header %}
  {% embed "@base/templates/partials/header.html.twig" %}
    {% block stylesheets %}
      <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
        integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous"
      >
      <style>
        .node { margin-bottom: 1rem; }
        .node:target { background: #fffde2; }
      </style>
    {% endblock %}
  {% endembed %}
{% endblock %}
